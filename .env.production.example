# Production Environment Variables
# Copy this file to .env.production for local production builds
# For deployment platforms, set these in their dashboard/settings

# Application Configuration
VITE_APP_NAME=Scramble Game
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=A calm, anxiety-free anagram word puzzle game

# API Configuration  
VITE_WORDS_API_BASE_URL=https://wordsapiv1.p.rapidapi.com
VITE_WORDS_API_KEY=your_rapidapi_key_here
VITE_WORDS_API_HOST=wordsapiv1.p.rapidapi.com

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_DEBUG=false

# Performance Configuration
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# Feature Flags
VITE_SOUND_ENABLED=true
VITE_ANALYTICS_DASHBOARD=true
VITE_SKIP_FUNCTIONALITY=true

# Build Configuration
VITE_BUILD_TIME=auto
VITE_SOURCE_MAPS=false
VITE_MINIFY=true